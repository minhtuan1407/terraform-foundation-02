{
    "variables": {
        "aws_access_key": "AKIASS4QLD2WPNDICYMN",
        "aws_secret_key": "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",
        "aws_subnet_id": "subnet-0347d9dbdc4507510"
    },
    "builders": [
        {
            "type": "amazon-ebs",
            "access_key": "{{user `aws_access_key`}}",
            "secret_key": "{{user `aws_secret_key`}}",
            "region": "ap-southeast-1",
            "subnet_id": "{{user `aws_subnet_id`}}",
            "ami_name": "booksite-amalin2-{{timestamp}}",
            "ami_description": "Landing page for book application",
            "tags": {
                "Builder": "Packer",
                "Role": "Web",
                "Team": "Frontend"
            },
            "instance_type": "t2.micro",
            "source_ami_filter": {
                "filters": {
                    "virtualization-type": "hvm",
                    "name": "amzn2-ami-hvm-2.0.*-gp2",
                    "root-device-type": "ebs"
                },
                "owners": ["amazon"],
                "most_recent": true
            },
            "ssh_username": "ec2-user",
            "force_deregister": true,
            "force_delete_snapshot": true
        }
    ],
    "provisioners": [
        {
            "type": "shell",
            "inline": [
                "sudo mkdir -p /var/www/html",
                "sudo chown ec2-user:ec2-user /var/www/html"
                ]
        },
        {
            "type": "shell",
            "inline": [
                "sudo  yum update -y && sudo yum upgrade -y",
                "sudo yum install python -y"
            ]
        },
        {
            "type": "file",
            "source": "website/",
            "destination": "/var/www/html/"
        },
        {
            "type": "ansible",
            "playbook_file": "./playbook.yml",
            "groups": ["web"]
        }
    ]
}